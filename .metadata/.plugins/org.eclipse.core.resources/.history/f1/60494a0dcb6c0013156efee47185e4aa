		menuitem_nuevo_entorno.setMnemonic(KeyEvent.VK_P);
		menuitem_nuevo_entorno.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_P, ActionEvent.CTRL_MASK));
